= simple_form_for [*resource_chain, resource] do |f|
  = render partial: '/shared/form_errors'

  = f.input :name, as: :string
  = f.input :institution
  = f.input :homepage, as: :url
  = f.input :description, as: :text, input_html: {rows: 5}
  = f.input :contact

  = f.submit class: 'btn btn-primary'
