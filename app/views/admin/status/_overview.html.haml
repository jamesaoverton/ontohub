%h3= t('status.overview')

.row
  .col-md-3
    %h4= t('status.ontology_count_by_state')
    %table.mapping_table.table-condensed
      - view.ontology_count_by_state.each do |(state, ontology_count)|
        %tr
          %td.state= state
          %td.count= ontology_count
  .col-md-6
    %h4= t('status.other_data')
    %table.mapping_table.table-condensed
      %tr
        %td.state= t('status.iris_marked_as_processing')
        %td.count= view.processing_iris_count
